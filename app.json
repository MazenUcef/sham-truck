{
  "expo": {
    "name": "sham-truk",
    "slug": "sham-truk",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/global/trucklogo.png",
    "scheme": "shamtruk",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "fonts": [
      {
        "asset": "./assets/fonts/Cairo/static/Cairo-Regular.ttf",
        "family": "Cairo-Regular"
      },
      {
        "asset": "./assets/fonts/Cairo/static/Cairo-Medium.ttf",
        "family": "Cairo-Medium"
      },
      {
        "asset": "./assets/fonts/Cairo/static/Cairo-Bold.ttf",
        "family": "Cairo-Bold"
      },
      {
        "asset": "./assets/fonts/Cairo/static/Cairo-SemiBold.ttf",
        "family": "Cairo-SemiBold"
      },
      {
        "asset": "./assets/fonts/Cairo/static/Cairo-Light.ttf",
        "family": "Cairo-Light"
      },
      {
        "asset": "./assets/fonts/Cairo/static/Cairo-ExtraLight.ttf",
        "family": "Cairo-ExtraLight"
      },
      {
        "asset": "./assets/fonts/Cairo/static/Cairo-Black.ttf",
        "family": "Cairo-Black"
      },
      {
        "asset": "./assets/fonts/Cairo/static/Cairo-ExtraBold.ttf",
        "family": "Cairo-ExtraBold"
      },
      {
        "asset": "./assets/fonts/SpaceMono-Regular.ttf",
        "family": "SpaceMono"
      }
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/global/trucklogo.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/global/trucklogo.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}